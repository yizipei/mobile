.banner
	position relative
	width 20rem
	height 10rem
	overflow hidden
	a
		position absolute
		top 0
		display block
		width @width
		height @height
		background-size 100% 100%
		background-repeat no-repeat
		&:first-of-type
			left 0
		&:not(:first-of-type)
			left 20rem
		&.previous
			animation previous 1s forwards
		&.current
			animation current 1s forwards
		&.init
			animation init .25s forwiards
		&.ltr
			animation ltr .25s forwiards
		&.rtl
			animation rtl .25s forwiards
	.indicator
		position absolute
		bottom .6rem
		width 20rem
		z-index 2
		text-align center
		em
			margin .6rem
			padding .04rem .36rem
			background-color orange
			color white
			font-size .75rem
		.current
			background-color red
@keyframes previous
	from
		left 0
	to
		left -20rem
@keyframes current
	from
		left 20rem
	to
		left 0